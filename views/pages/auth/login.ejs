                                                <input type="password" class="form-control form-control-user" id="password" name="password" placeholder="Password" required>
                                            </div>
                                            <input type="submit" class="btn btn-success btn-block waves-effect waves-light" value="Log In"/>
                                        </form>
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>

    <%- include('../../common/scripts.ejs') %>
